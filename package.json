{
  "name": "cxp",
  "version": "0.0.0-development",
  "description": "Code Extension Protocol (CXP) client, server, and protocol library for JavaScript/TypeScript",
  "author": "Sourcegraph",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/cxp-js.git"
  },
  "bugs": {
    "url": "https://github.com/sourcegraph/cxp-js/issues"
  },
  "main": "lib/index.js",
  "module": "module/index.js",
  "files": [
    "lib",
    "module"
  ],
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "semantic-release": "semantic-release",
    "prettier": "prettier '**/*.{js?(on),ts}' --write --list-different",
    "tslint": "tslint -c tslint.json -p tsconfig.json './src/**/*.ts'",
    "typecheck": "tsc -p tsconfig.json",
    "build:assets": "typescript-json-schema --noExtraProps --required --include src/protocol/contribution.ts --out lib/protocol/contribution.schema.json tsconfig.dist.module.json Contributions",
    "build:commonjs": "tsc -p tsconfig.dist.commonjs.json",
    "build:module": "tsc -p tsconfig.dist.module.json",
    "build": "npm run build:commonjs && npm run build:module && npm run build:assets",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register --require source-map-support/register --opts mocha.opts",
    "cover": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --require ts-node/register --require source-map-support/register --all mocha --opts mocha.opts --timeout 10000",
    "watch:typecheck": "tsc -p tsconfig.json -w",
    "watch:build:assets": "nodemon --watch src/protocol/contribution.ts --exec 'npm run build:assets || exit 1'",
    "watch:build:commonjs": "tsc -p tsconfig.dist.commonjs.json -w",
    "watch:build:module": "tsc -p tsconfig.dist.module.json -w",
    "watch:build": "concurrently --kill-others 'npm:watch:build:*'",
    "watch:test": "npm run test -- -w",
    "watch:cover": "nodemon --watch src/ --ext ts,js,json --watch package.json --exec 'npm run cover || exit 1'"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "examples/",
      "**/*.d.ts",
      "**/*.test.ts",
      "**/*.js"
    ],
    "cache": true,
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "sideEffects": false,
  "dependencies": {
    "minimatch": "^3.0.4",
    "rxjs": "^6.2.2",
    "uuid": "^3.3.2",
    "vscode-languageserver-types": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@sourcegraph/prettierrc": "^2.1.1",
    "@sourcegraph/tsconfig": "^3.0.0",
    "@sourcegraph/tslint-config": "^12.0.0",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.5.0",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^6.0.0",
    "concurrently": "^3.6.0",
    "cpy-cli": "^2.0.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.2",
    "nyc": "^12.0.2",
    "prettier": "^1.13.6",
    "semantic-release": "^15.6.3",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.0.1-insiders",
    "typescript-json-schema": "^0.31.0"
  },
  "optionalDependencies": {}
}
